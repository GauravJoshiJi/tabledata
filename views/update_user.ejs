<!-- -- Main Section -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Product</h2>
      <span class="text-light">Use the below from to Update products</span>
    </div>
    <!-- Form handling  -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Title</label>
          <input type="hidden" name="id" value="" />
          <input
            type="text"
            name="name"
            value=""
            placeholder="Enter Product Title"
          />
        </div>
        <div class="form-group">
          <label for="Email" class="text-light">Description</label>
          <input
            type="text"
            name="email"
            value=""
            placeholder="Enter product Description"
          />
        </div>
        <div class="form-group">
          <label for="Email" class="text-light">Price</label>
          <input type="text" name="email" value="" placeholder="Enter Price" />
        </div>

        <div class="form-group">
          <label for="Email" class="text-light">Rating</label>
          <input
            type="text"
            name="email"
            value=""
            placeholder="Enter product rating"
          />
        </div>

        <div class="form-group">
          <label for="Email" class="text-light">Image</label>
          <input
            type="text"
            name="email"
            value=""
            placeholder="Enter Image URL"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- -- /Main Section -->

<!-- include footer  -->
<%-include('include/_footer')%>
<!-- /include footer  -->
